body
  width 100%
  height 100%
  position absolute
  top 0
  left 0

#app
  position absolute
  width 100%
  height 100%
  font-family: 'Roboto', Helvetica, Arial, sans-serif
  -webkit-font-smoothing: antialiased
  -moz-osx-font-smoothing: grayscale

// md-button icon fixes
.md-button
  &.icon-left
    i.md-icon
      margin-left -6px
      margin-top -2px
  &.icon-right
    i.md-icon
      margin-right -6px
      margin-top -2px

// md-radio layout fixes
.md-radio
  display block !important

  &-container
    display inline-block

  label
    position relative
    top -5px

// Remove spinner from input type="number"
input[type="number"]
  &::-webkit-outer-spin-button
  &::-webkit-inner-spin-button
    /* display: none; <- Crashes Chrome on hover */
    -webkit-appearance none
    margin 0 /* <-- Apparently some margin are still there even though it's hidden */

// page transitions
.fade
  &-enter-active, &-leave-active
    transition opacity .5s
    
  &-enter, &-leave-to
    opacity 0
    transition opacity .15s

// page transitions
.page-fade
  &-enter-active, &-leave-active
    transition opacity .5s
    
  &-enter, &-leave-to
    opacity 0
    transition opacity .15s

// float fix
.clearfix
  clear both

// global page styling
.page
  position absolute !important
  top 0
  left 0
  width 100%
  height 100%
  overflow-x hidden
  overflow-y scroll
  background white

  &--menu
    border-top 56px solid white

  &--tabs
    border-top 46px solid white

  &--cards
    background #eee

.grid__outer
  width 100%
  max-width 1160px
  padding 16px 16px
  position relative