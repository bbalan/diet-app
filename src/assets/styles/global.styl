.md-list-item
  .md-ink-ripple
    display none !important

// page transitions
.fade
  &-enter-active, &-leave-active
    transition opacity .2s
    
  &-enter, &-leave-to
    opacity 0
    transition opacity .2s

// page transitions
.page-fade
  &-enter-active, &-leave-active
    transition opacity .5s
    
  &-enter, &-leave-to
    opacity 0
    transition opacity .15s

.expand
  &-enter-active, &-leave-active
    opacity 1
    max-height 1000px
    overflow hidden
    transition all .4s
    
  &-enter, &-leave-to
    opacity 0
    max-height 0
    transition all .4s

// float fix
.clearfix
  clear both

// global page styling
.page
  position absolute
  top 0
  left 0
  width 100%
  height 100%
  overflow-x hidden
  overflow-y scroll
  background white

  &--menu
    border-top 56px solid white

  &--tabs
    border-top 46px solid white

  &--cards
    background #eee

  &--padded
    width 100%
    max-width 1160px
    padding 16px 24px

.card
  &__heading
    padding-top 0
    margin-top 0