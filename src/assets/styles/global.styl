body
  width 100%
  height 100%
  position absolute
  top 0
  left 0

#app
  position absolute
  width 100%
  height 100%
  font-family 'Roboto', Helvetica, Arial, sans-serif
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale

input
  font-family 'Roboto', Helvetica, Arial, sans-serif

.md-input-container
  .input__unit
    line-height 1em
    position absolute
    bottom 10px !important
    right 0
    opacity 0
    transition all .2s

  &.md-input-focused
  &.md-has-value
    .input__unit
      opacity 1

  &.md-input-invalid
    .input__unit
      color #ff5722

// md-button icon fixes
.md-button
  &.icon-left
    i.md-icon
      margin-left -6px
      margin-top -2px
  &.icon-right
    i.md-icon
      margin-right -6px
      margin-top -2px

// md-radio layout fixes
.md-radio
  display block !important

  &-container
    display inline-block

  label
    position relative
    top -5px

// Remove spinner from input type="number"
input[type="number"]
  &::-webkit-outer-spin-button
  &::-webkit-inner-spin-button
    /* display: none; <- Crashes Chrome on hover */
    -webkit-appearance none
    margin 0 /* <-- Apparently some margin are still there even though it's hidden */

